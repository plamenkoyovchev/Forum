@model IEnumerable<Forum.Data.Models.Post>

@if (Model != null)
{
    foreach (var post in Model)
    {
        <div class="panel panel-default">
            <h4 class="panel-heading remove-margin-top">@post.Title</h4>
            <h3 class="panel-title">@post.Title</h3>
            <p class="panel-body">@Html.Raw(post.Content)</p>
            <p class="panel-body"><small>posted by: @post.User.UserName</small></p>
        </div>
        <hr />
    }
}
else
{
    <div class="panel panel-info">
        No posts.
    </div>
}
